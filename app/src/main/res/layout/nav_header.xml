<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/nav_header_size"
    android:gravity="bottom"
    android:orientation="vertical"
    android:padding="@dimen/max_padding"
    android:background="@color/colorPrimary">

    <ImageView
        android:id="@+id/imageViewMeli"
        android:layout_width="0dp"
        android:layout_height="@dimen/drawer_header_size"
        android:layout_marginStart="@dimen/min_padding"
        android:layout_marginEnd="@dimen/min_padding"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.505"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/meli"
        android:contentDescription="@string/header_nav_drawer_descr" />

    <TextView
        android:id="@+id/textViewName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/min_padding"
        android:layout_marginEnd="@dimen/min_padding"
        android:paddingTop="@dimen/min_padding"
        android:text="@string/user"
        android:textAppearance="@android:style/TextAppearance.Holo.Widget.Button"
        android:textSize="@dimen/header_text_size"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageViewMeli" />

    <TextView
        android:id="@+id/textViewEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/min_padding"
        android:layout_marginEnd="@dimen/min_padding"
        android:layout_marginBottom="@dimen/min_padding"
        android:text="@string/email"
        android:textAppearance="@android:style/TextAppearance.Holo.Widget.Button"
        android:textSize="@dimen/header_text_size"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewName"
        app:layout_constraintVertical_bias="0.0" />

</android.support.constraint.ConstraintLayout>